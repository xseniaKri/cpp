{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "C:/Users/Marta/Desktop/cpp/lab6_2/main.cpp",                                // Исходный файл
                "/I", "C:/Users/Marta/Desktop/cpp/lab6_2/",   // Путь к заголовочному файлу (myStack.h)
                "myStack.lib",                             // Статическая библиотека
                "/EHsc",                                 
                "/Zi",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Линковка с myStack.lib",
            "type": "shell",
            "command": "link.exe",  // Линковщик
            "args": [
                "main.obj",                               // Объектный файл, сгенерированный компилятором
                "/OUT:C:/Users/Marta/Desktop/cpp/lab6_2/main.exe",  // Выходной файл
                "/LIBPATH:C:/Users/Marta/Desktop/cpp/lab6_2/", // Путь к библиотекам
                "myStack.lib"                            // Статическая библиотека
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$msCompile"],
            "detail": "Линковка с myStack.lib"
        }
    ],
    "version": "2.0.0"
}